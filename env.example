# AI Gateway Environment Configuration
# Copy this file to .env and modify as needed

# Application Configuration
APP_NAME=AI Gateway
APP_VERSION=1.0.0
ENVIRONMENT=production

# Database Configuration
DB_NAME=aigateway
DB_USER=aigateway
DB_PASSWORD=changeme
DB_PORT=5432

# Application Ports
FRONTEND_PORT=5556
BACKEND_PORT=5555

# Security
SECRET_KEY=changeme
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Provider Configuration
# Choose ONE of the following providers:
# - demo: Demo mode (no API key required)
# - openai: OpenAI GPT models
# - anthropic: Anthropic Claude models
# - ollama: Local Ollama models
AI_PROVIDER=demo

# OpenAI Configuration (if AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration (if AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Microsoft OIDC Configuration (Optional)
MS_TENANT_ID=
MS_CLIENT_ID=
MS_CLIENT_SECRET=

# Optional: Reverse Proxy Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Optional: Python and Node versions
PYTHON_VERSION=3.11
NODE_VERSION=20
